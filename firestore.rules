rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{uid} {
      allow read: if request.auth.uid == uid;
    }

    match /reviews/{review} {
      // TODO: Much tighter
      allow read, write: if request.auth.uid != null;
      match /threads/{thread} {
        allow read, write: if request.auth.uid != null;
      }
      match /comments/{comment} {
        allow read, write: if request.auth.uid != null;
      }
    }
  }
}