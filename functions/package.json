{
  "name": "functions",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "format": "prettier --write src/*.ts src/**/*.ts ../shared/*.ts",
    "emulate": "firebase emulators:start --only \"hosting,functions\"",
    "serve": "concurrently \"npm run build:watch\" \"npm run emulate\"",
    "deploy": "firebase deploy --only functions"
  },
  "engines": {
    "node": "10"
  },
  "main": "lib/functions/src/index.js",
  "dependencies": {
    "@octokit/auth-app": "^2.6.0",
    "@octokit/graphql": "^4.5.3",
    "@octokit/rest": "^18.0.0",
    "axios": "^0.19.2",
    "axios-debug-log": "^0.8.0",
    "firebase-admin": "^8.12.1",
    "firebase-functions": "^3.6.1",
    "parse-diff": "^0.7.1",
    "probot": "^10.2.0"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/node": "^14.0.27",
    "concurrently": "^5.2.0",
    "firebase-functions-test": "^0.2.0",
    "firebase-tools": "^8.6.0",
    "prettier": "^2.0.5",
    "smee-client": "^1.1.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.8.0"
  },
  "private": true
}
